@model IEnumerable<Student>
@{
    Layout = null;
    int i = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body class="container">
    <table class="table table-light table-hover mt-5 align-items-center">
        <thead>
            <tr>
                <th>#</th>
                <th>Student ID</th>
                <th>Student name</th>
                <th>Student age</th>
                <th>Department name</th>
                <th>Operations</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            { <tr>
                    <td>@(i++)</td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.age</td>
                    <td>@item.department.Deptname</td>
                    <td>
                        <button  type="button" class="btn btn-info" onclick="fun1(@item.Id)"
                                data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                            Details
                        </button>
                        <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id" asp-route-studimg="@item.stdimg" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Student/Create" class="btn btn-dark">Create</a>

@* ---------------------------------------------------------------------------------------- *@

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="stddata" class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script>
        function fun1(i) {
            $("#stddata").load("/Student/Details/" + i)
        }
    </script>
</body>
</html>
