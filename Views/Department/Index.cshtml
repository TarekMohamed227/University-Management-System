@model IEnumerable<Department>
@{
    Layout = null;
    int i = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body class="container">
    <table class="table table-light table-hover mt-5 align-items-center">
        <thead>
            <tr>
                <th>#</th>
                <th>Department ID</th>
                <th>Department name</th>
                <th>Number of Students</th>
                <th>Number of Courses</th>
                <th>Operations</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@item.Deptid</td>
                    <td>@item.Deptname</td>
                    <td>@item.Students.Count</td>
                    <td>@item.Courses.Count</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Deptid" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.Deptid" class="btn btn-danger">Delete</a>
                        <a asp-action="ShowCourses" asp-controller="DepartmentCourses" asp-route-id="@item.Deptid" class="btn btn-danger">Show Courses</a>
                        <a asp-action="ManageCourses" asp-controller="DepartmentCourses" asp-route-id="@item.Deptid" class="btn btn-dark">Manage Courses</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Department/Create" class="btn btn-dark">Create</a>

    @* ---------------------------------------------------------------------------------------- *@

    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/lib/jquery/dist/jquery.js"></script>
   
</body>
</html>
